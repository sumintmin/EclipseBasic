package kr.or.ddit.homework.home11;

public class Deck {
	Card[] cardList;
	
	Deck(){
		int cnt = 0;
		cardList = new Card[52];
		String[] types = {"♣","♠","♡","◇"};
		for(int i = 0; i< 4; i++) {
			for (int j = 1; j <= 13; j++) {
				cardList[cnt++] = new Card(j, types[i]);
			}
			
		}
	}
	
	public void printCardList() {
		for (int i = 0; i < cardList.length; i++) {
			System.out.print(cardList[i]);
			System.out.print(",");
		}
	}
	
	public void shuffle() {
		
		int cardNum = (int)(Math.random() * cardList.length);
		// 랜덤 번호에 해당하는 카드를 출력
		System.out.println(cardNum);
		
		// 카드 섞기
//		for (int i = 0; i < 1000000; i++) {
//			int random = (int)(Math.random() * cardList.length);
//			int temp = cardNum[0];
//			cardList[0] = cardList[random];
//			cardList[random] = temp;
//			System.out.println(cardList_);
//		}
		
	}
	

	
	public Card getCard(int num) {
		
		
		
		
		return cardList[num]; // 리턴값은 카드다.
	}
	
}
