package kr.or.ddit.homework;

import java.util.Scanner;

public class Homework07 {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		Homework07 obj = new Homework07();
		obj.process();

	}

	public void process() {
		// 1. 랜덤글자 고르기
		String[] words = {"airplane", "apple", "bicycle", "carrot"};
		int wordSel = (int)(Math.random() * words.length);
		String word= words[wordSel];
		char[] wordChars = word.toCharArray();
		String blank = "";
		
		// 2. 랜덤글자만큼 밑줄 출력하기
		for (int i = 0; i < wordChars.length; i++) {
			blank+="-";
		}
		System.out.println(blank);
		
		// 3. 글자 변경을 위해(인덱스부여) 배열로 변환하기
		char[] bla = blank.toCharArray();
		
		// 4. 시도 횟수와 정답 스트링, 오답스트링 생성을 위한 변수 선언
		int cnt = 0;
		String ra = "";
		
		// 5. 시도횟수가 10번 될때까지 반복
		while(cnt < 10) {
			// 6. 만약 정답 스트링과 랜덤글자가 일치하지 않는다면
			if ( ra.contentEquals(word) == false) {
				// 7. 입력받고 배열로 변환
				System.out.println("한 글자만 입력하여라");
				String ans = sc.next();
				char[] answer = ans.toCharArray();
				
				// 8. cnt++
				cnt++;
				System.out.println(cnt + "회 시도");
				
				// 9. 입력글자의 첫글자가 정답배열에 있는지 반복문으로 확인
				for (int i = 0; i < wordChars.length; i++) {
					// 10. 같다면
					if (wordChars[i] == answer[0]) {
						//11. 정답배열과 동일한 인덱스를 가지는 밑줄배열의 동일한 자리를 
						// 입력 문자로 변경
						bla[i] = answer[0];
						// 12. 정답글자가 포함된 밑줄배열을 스트링으로 변경한다.
						ra = bla.toString();
					}else {
						// 13. 정답배열에 입력글자가 없는 경우(틀린 경우)
						cnt++;
					}
						
					}
				}else {
					System.out.println("성공!");
				}
			}
			
			
			
			
			
		}
		
		
	}
		
		
		
		
		
		
		
		
		
	
	
	

