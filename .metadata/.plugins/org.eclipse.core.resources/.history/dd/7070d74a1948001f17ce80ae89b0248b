package kr.or.ddit.homework.home14;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.Statement;

public class DBMain_test {
	Connection conn;
	Statement stmt;
	ResultSet rs;
	
	public static void main(String[] args) {
		DBMain_test db = new DBMain_test();
		db.selectAll();
	}
	
	public Member[] selectAll() {
		Member[] memberList = null;
		
		try {
			
			conn = DBConn.getConnection();
			stmt = conn.createStatement();
			String sql = "SELECT * FROM MEMBER";
			
			rs = stmt.executeQuery(sql);
			
			// 취미랑 직업 중에서 선택 , 취미 -> 바둑 출력
			// 직업 선택 -> 주부 출력
			String mid, mname, mlike, mjob = "";
			while(rs.next()) {
				Member mem = new Member();
				mid = rs.getString("mem_id");
				mname = rs.getString("mem_name");
				mlike = rs.getString("mem_like");
				mjob = rs.getString("mem_job");
				
				mem.setMem_id(mid);
				mem.setMem_name(mname);
				mem.setMem_like(mlike);
				mem.setMem_job(mjob);
				
				System.out.print(mname + "\t");
				System.out.println(mlike.equals("바둑"));
				
				
			}
			
					
			int sel = ScanUtil.nextInt("1. 취미 2. 직업");
			if(sel == 1) {
				String search = ScanUtil.nextLine("검색");
				if(mlike.equals(search)) {
					System.out.println(mname + "\t" + mjob);
				}
				
			}
			if(sel == 2) {
				String search = ScanUtil.nextLine("검색");
				if(mjob.equals(search)) {
					System.out.println(mname + "\t" + mjob);
				}
			}
			
		}
		catch (Exception e) {
			e.printStackTrace();
		}
		return memberList;
	
	}
	
	
}
