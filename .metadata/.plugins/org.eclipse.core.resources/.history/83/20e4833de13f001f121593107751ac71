package kr.or.ddit.test;

import java.util.Scanner;

public class buuble {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		buuble obj = new buuble();
		obj.process();
	}

public void process() {
		
		int[][] scores = 
			{
			{90, 80, 70, 0, 0, 1},
			{84, 72, 65, 0, 0, 1},
			{87, 99, 42, 0, 0, 1},
			{80, 77, 92, 0, 0, 1}
			};
		//총점 / 평균 구하기.
		for(int i=0; i<scores.length; i++) {
			scores[i][3] = scores[i][0]+scores[i][1]+scores[i][2];
			scores[i][4] = scores[i][3]/3;
			
		}
		//등수 구하기
		for(int i=0; i<scores.length; i++) {
			for(int j=0; j<scores.length; j++) {
				if(scores[i][3]<scores[j][3]) {
					scores[i][5]++;
				}
			}
		}
		System.out.println("국\t수\t사\t총점\t평균\t등수");
		System.out.println("=========================================");
		for(int i=0; i<scores.length; i++) {
			for(int j=0; j<scores[i].length; j++) {
				System.out.print(scores[i][j]+ "\t ");
			}
			System.out.println();
		}
		//등수 별로 정렬하기
		for (int i = 0; i < scores.length - 1; i++) {
            for (int j = 0; j < scores.length - 1 - i; j++) {
                if (scores[j][5] > scores[j + 1][5]) {
                    // 두 행을 교환
                    int[] temp = scores[j];
                    scores[j] = scores[j + 1];
                    scores[j + 1] = temp;
                }
            }
        }
		System.out.println("등수별 정렬 후");
        System.out.println("국\t수\t사\t총점\t평균\t등수");
        System.out.println("=========================================");
        for (int i = 0; i < scores.length; i++) {
            for (int j = 0; j < scores[i].length; j++) {
                System.out.print(scores[i][j] + "\t ");
            }
            System.out.println();
        }
        System.out.println("=========================================");
    }
}