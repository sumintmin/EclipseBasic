package kr.or.ddit.test;

import java.util.Scanner;

public class buuble {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		buuble obj = new buuble();
		obj.process();
	}

	public void process() {
		// 국 영 수 총점 평균 등수
		int[][] scores = { { 90, 80, 70, 0, 0, 1 }, { 84, 72, 65, 0, 0, 1 }, { 87, 99, 42, 0, 0, 1 },
				{ 77, 61, 81, 0, 0, 1 }, { 80, 77, 92, 0, 0, 1 } };

		// 총점 / 평균 -> 배열
		for (int i = 0; i < scores.length; i++) {
			scores[i][3] = scores[i][0] + scores[i][1] + scores[i][2];
			scores[i][4] = scores[i][3] / 3;

		}

		// 등수
		for (int i = 0; i < scores.length; i++) {
			for (int j = 0; j < scores.length; j++) {
				if (scores[i][3] < scores[j][3]) {
					scores[i][5]++;

				}
			}
		}

		System.out.println("국어 \t영어\t수학\t총점\t평균\t등수");
		System.out.println("-------------------------------------------");
		for (int i = 0; i < scores.length; i++) {
			for (int j = 0; j < scores[i].length; j++) {
				System.out.print(scores[i][j] + "\t");
			}
			System.out.println();
		}
		System.out.println("-------------------------------------------");
		
		
		////등수별로 정렬하기
		int numRows = scores.length;
        int numCols = scores[0].length;

        for (int col = 0; col < numCols; col++) {
            for (int i = 0; i < numRows - 1; i++) {
                for (int j = 0; j < numRows - 1 - i; j++) {
                    if (scores[j][col] > scores[j + 1][col]) {
                        // 두 요소 교환
                        int temp = scores[j][col];
                        scores[j][col] = scores[j + 1][col];
                        scores[j + 1][col] = temp;
                    }
                }
            }
        }
		

		

		
		System.out.println("국어 \t영어\t수학\t총점\t평균\t등수");
		System.out.println("-------------------------------------------");
		for (int i = 0; i < scores.length; i++) {
			for (int j = 0; j < scores[i].length; j++) {
				System.out.print(scores[i][j] + "\t");
			}
			System.out.println();
		}
		System.out.println("-------------------------------------------");
	}
}
