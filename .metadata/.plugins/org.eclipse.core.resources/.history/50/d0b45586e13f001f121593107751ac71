package kr.or.ddit.test;

import java.util.Scanner;

public class buuble {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		buuble obj = new buuble();
		obj.process();
	}

	public void process() {
		// 국어, 영어, 수학 총 점 평균 등수
		int[][] scores = { { 90, 80, 70, 0, 0, 1 }, 
							{ 84, 72, 65, 0, 0, 1 }, 
							{ 87, 99, 42, 0, 0, 1 },
							{ 77, 61, 81, 0, 0, 1 }, 
							{ 80, 77, 92, 0, 0, 1 }, };

		// 1. 총점 / 평균 구하기 -> {90,80,70,0,0,1} 의 0,0,1 부분에 넣기 => 반복문 이용

		for (int i = 0; i < scores.length; i++) {
			scores[i][3] = scores[i][0] + scores[i][1] + scores[i][2];  // 총점
			scores[i][4] = scores[i][3] / 3;							// 평균
		}
		
		// 2. 등수 구하기
		for(int i =0; i<scores.length ; i++) {          // i = 내 점수(특정 인물) 라고 생각
			for(int j =0; j<scores.length; j++) {			// j = 다른 사람 점수
				if(scores[i][3]<scores[j][3]) {
					scores[i][5]++;
				}
			}
			
		}
		
		System.out.println("국\t영\t수\t총점\t평균\t등수");
		System.out.println("=============================================");
		for(int i=0;i<scores.length;i++) {   // scores.length: 1차원 배열의 길이
			for(int j=0; j<scores[i].length;j++) {  //scores[i] : 1차원 배열을 의미     scores[i].length:1차원 배열의 갯수의 길이...?
				System.out.print(scores[i][j]+"\t");
			}
			System.out.println();
		}
		
		// 3. 버블 정렬 이용해서 등수 별로 정렬하기   -> int 배열을 바꿔서 등수 비교
		for (int i = 0; i < scores.length - 1; i++) {
	        for (int j = 0; j < scores.length - 1 - i; j++) {
	            if (scores[j][5] > scores[j + 1][5]) {
	                int[] temp = scores[j];
	                scores[j] = scores[j + 1];
	                scores[j + 1] = temp;
	            }
	        }
	    }
		
		
		System.out.println("=============================================");
		
		System.out.println("국\t영\t수\t총점\t평균\t등수");
		System.out.println("=============================================");
		for(int i=0;i<scores.length;i++) {   // scores.length: 1차원 배열의 길이
			for(int j=0; j<scores[i].length;j++) {  //scores[i] : 1차원 배열을 의미     scores[i].length:1차원 배열의 갯수의 길이...?
				System.out.print(scores[i][j]+"\t");
			}
			System.out.println();
		}
		System.out.println("=============================================");
	}

}
