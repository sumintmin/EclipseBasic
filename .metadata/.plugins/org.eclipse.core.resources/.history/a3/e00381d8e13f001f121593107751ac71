package kr.or.ddit.test;

import java.util.Scanner;

public class buuble {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		buuble obj = new buuble();
		obj.process();
	}

	public void process() {
//		국영수 총점 평균 등수
		int[][] scores = 
			  { { 90, 80, 70, 0, 0, 1 }, 
				{ 84, 75, 65, 0, 0, 1 }, 
				{ 87, 99, 42, 0, 0, 1 },
				{ 77, 61, 81, 0, 0, 1 }, 
				{ 80, 77, 92, 0, 0, 1 } };
		
		
//		반복문 이용해서 총점 /평균 구하기
		for (int i = 0; i < scores.length; i++) {
			scores[i][3] = scores[i][0] + scores[i][1] + scores[i][2];
			scores[i][4] = scores[i][3] / 3;
//			int 타입이기 때문에 double로 바꾸지는 않겠음
		}
		
		
	  //등수 구하기
//		내 총점과 다른 사람 총점 비교
		
		for(int i=0; i<scores.length; i++){
			for(int j=0; j<scores.length; j++) {
				if(scores[i][3]<scores[j][3]) {
					scores[i][5]++;
//					[i][5]가 등수를 저장하는 곳이니 ++해 줌
				}
			}
		}	
		
		System.out.println("국\t영\t수\t총점\t평균\t등수");
		System.out.println("===========================================");
		for (int i = 0; i < scores.length; i++) {
//			1차원 배열의 길이
			for (int j = 0; j < scores[i].length; j++) {
//				1차원 배열 원소 개수의 길이
				System.out.print(scores[i][j] + "\t");
			}
			System.out.println();
		}
		System.out.println("===========================================");
		
		
		//오늘 배운 버블 정렬 이용해 등수 별로 정렬하기
		// 등수끼리 비교하고 int랑 int가 아닌 int[], int[]을 바꿔 준다
		//임시로 담는 것도 배열이 같아야 함
		int temp[]=new int[6];
		System.out.println("국\t영\t수\t총점\t평균\t등수");
		System.out.println("===========================================");
		for (int i = 0; i < scores.length-1; i++) {
			for (int j = 5; j < scores.length-1; j++) {
				if(scores[j][5]>scores[j+1][5]) {
					temp = scores[j];
					scores[j]=scores[j+1];
					scores[j+1]=temp;
					
					
				}
				
				
				System.out.print(scores[i][j] + "\t");
			}
			System.out.println();
		}
		for(int i=0; i<scores.length; i++)
		System.out.println("===========================================");
	}
}